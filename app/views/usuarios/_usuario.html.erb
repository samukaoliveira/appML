<div id="<%= dom_id usuario %>">
  <p>
    <strong>Email:</strong>
    <%= usuario.email %>
  </p>

  <p>
    <strong>Nome:</strong>
    <%= usuario.nome %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= usuario.role %>
  </p>

  <p>
    <strong>Tipo skill:</strong>
    <% if usuario.tipo_skills.present? %>
      
      <%= usuario.tipo_skills.each do |skill| %>
        <%= skill.nome %>
      <% end %>
    <% end %>
  </p>

</div>
