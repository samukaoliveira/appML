<%= form_with(model: escala) do |form| %>
  <% if escala.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(escala.errors.count, "error") %> prohibited this escala from being saved:</h2>

      <ul>
        <% escala.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :data, style: "display: block" %>
    <%= form.date_field :data %>
  </div>

  <div>
    <%= form.label :hora, style: "display: block" %>
    <%= form.time_field :hora %>
  </div>

  <div>
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome %>
  </div>

  <div>
    <%= form.label :baterista, style: "display: block" %>
    <%= form.select :baterista, value: opcoes_de_baterista %>
  </div>

  <div>
    <%= form.label :baixista, style: "display: block" %>
    <%= form.select :baixista, value: opcoes_de_baixista %>
  </div>

  <div>
    <%= form.label :tecladista, style: "display: block" %>
    <%= form.select :tecladista, value: opcoes_de_tecladista %>
  </div>

  <div>
    <%= form.label :vocalista, style: "display: block" %>
    <%= form.select :vocalista, value: opcoes_de_vocalista %>
  </div>

  <div>
    <%= form.label :vionolista, style: "display: block" %>
    <%= form.select :vionolista, value: opcoes_de_violonista %>
  </div>

  <div>
    <%= form.label :guitarrista, style: "display: block" %>
    <%= form.select :guitarrista, value: opcoes_de_guitarrista %>
  </div>

<div>
    <%= form.label :musica1_id, "Música 1", style: "display: block" %>
    <%= form.select :musica1_id, opcoes_de_musica.map { |musica| [musica.nome, musica.id] }, { selected: @escala.musicas.first&.id } %>

    <%= form.label :_versao_musica1_id, "Versão", style: "display: block" %>
    <%= form.select :_versao_musica1_id, opcoes_de_versao(@escala.musicas.first.id).map { |versao| [versao.nome, versao.id] } %>

  </div>

  <div>
    <%= form.label :musica2_id, "Música 2", style: "display: block" %>
    <%= form.select :musica2_id, opcoes_de_musica.map { |musica| [musica.nome, musica.id] }, { selected: @escala.musicas.second&.id } %>

    <%= form.label :_versao_musica2_id, "Versão", style: "display: block" %>
    <%= form.select :_versao_musica2_id, opcoes_de_versao(@escala.musicas.second.id).map { |versao| [versao.nome, versao.id] } %>

  </div>

  <div>
    <%= form.label :musica3_id, "Música 3", style: "display: block" %>
    <%= form.select :musica3_id, opcoes_de_musica.map { |musica| [musica.nome, musica.id] }, { selected: @escala.musicas.third&.id } %>

    <%= form.label :_versao_musica3_id, "Versão", style: "display: block" %>
    <%= form.select :_versao_musica3_id, opcoes_de_versao(@escala.musicas.third.id).map { |versao| [versao.nome, versao.id] } %>

  </div>

  <div>
    <%= form.label :outros, style: "display: block" %>
    <%= form.text_field :outros %>
  </div>

  <div>
    <%= form.label :obs, style: "display: block" %>
    <%= form.text_field :obs %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
