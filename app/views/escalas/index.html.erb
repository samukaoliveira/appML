<p style="color: green" class="text-center"><%= notice %></p>

<h1 class="text-center m-4">Escalas</h1>


<div class="container rounded shadow p-2">
  <div class="d-flex mb-4">
    <div class="d-flex">
      <%= link_to new_escala_path, class: "d-flex align-items-center" do %>
        <%= image_tag "plus.png", size: "50", class: "m-2" %>
      <% end %>
    </div>
    <div class="m-2 align-items-end">
      <form action="/escalas" method="get" class="form-control"> 
        <input id="nome" name="nome" type="text" size="22" class=""/> 
        <button type="submit"><%= image_tag "lupa.png", size: "37", class: "" %></button>
      </form>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="">
      <table class="table">
        

        <tr>
          <td class="fw-bold text-center">Nome</td>
          
          <td class="fw-bold"><%= image_tag 'calendar.png', size: '25', class: '' %>Data</td>

          <td class="fw-bold"><%= image_tag 'music.png', size: '25', class: '' %>Músicas</td>
          
        </tr>
      


        <div id="escalas">
          <% @escalas.each do |escala| %>
          <tr>
                  <td><%= link_to escala.nome, escala, class: "text-decoration-none" %></td>
                  <td><%= escala.data %></td>
                  <td class="col-lg-5">
                  <% if escala.musicas.any?%>
                    <% escala.musicas.each do |musica| %>
                      <%= musica.nome %><%= ', ' unless musica == escala.musicas.last %>
                    <% end %>
                  <% else %>
                    <p class="text-danger">Nenhuma música associada a esta escala.</p>
                  <% end %>
                  </td>
                  </tr>
          <% end %>
        </div>


    </div>
  </div>
</div>
</table>
