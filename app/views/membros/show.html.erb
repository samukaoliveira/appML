<p style="color: green" class="text-center"><%= notice %></p>

<h3 class="text-center m-3">Detalhes do Membro</h3>
<div class="container">
  <div class="row justify-content-center">
    <div class="d-flex col-lg-8 col-11 rounded shadow p-1 m-1">
        <table class="table">
        <thead>
          <th class="col-5">Nome</th>
          <th class="col-7">Funções</th> 
        </thead>
        <tr>
        <%= render @membro %>
        </table>
    </div>


    <div class="d-flex justify-content-center">
      <%= link_to "Editar", edit_membro_path(@membro), class: "btn btn-warning m-2" %>
      <%= button_to "Deletar membro", @membro, method: :delete, class: "btn btn-danger m-2" %>
      <%= link_to "Voltar", membros_path, class: "btn btn-secondary m-2" %>
    </div>

  </div>
</div>




