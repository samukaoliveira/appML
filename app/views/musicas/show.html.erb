<p style="color: green" class="text-center"><%= notice %></p>


      <h3 class="text-center m-3">Detalhes da Música</h3>
<div class="container">
  <div class="row justify-content-center">
    <div class="d-flex col-lg-8 col-11 rounded shadow p-1 m-1">
      <table class="table">
        <tr>
          <td><%= image_tag 'music.png', size: '25', class: '' %></td>
          <td class="fw-bold">Nome:</td>
          <td><%= @musica.nome %></td>
        </tr>
          <td><%= image_tag 'singer.png', size: '25', class: '' %></td>
          <td class="fw-bold">Intérprete:</td>
          <td><%= @musica.interprete %></td>
        <tr>
          <td><%= image_tag 'music-notes.png', size: '25', class: '' %></td>
          <td class="fw-bold">Tom original:</td>
          <td><%= @musica.tom_original %></td>
        <tr>
          <td><%= image_tag 'pentagram.png', size: '25', class: '' %></td>
          <td class="fw-bold">Último tom tocado:</td>
          <td><%= @musica.ultimo_tom_tocado %></td>
        <tr>
          <td><%= image_tag 'metronome.png', size: '25', class: '' %></td>
          <td class="fw-bold">BPM Original:</td>
          <td><%= @musica.bmp_original %></td>
        <tr>
          <td><%= image_tag 'metronome - p&b.png', size: '25', class: '' %></td>
          <td class="fw-bold">Último BPM tocado:</td>
          <td><%= @musica.ultimo_bpm_tocado %></td>
        <tr>
          <td><%= image_tag 'observe.png', size: '25', class: '' %></td>
          <td class="fw-bold">Observações:</td>
          <td><%= @musica.obs %></td>
          
      </table>
    </div>

    
  </div>
  <div class="row justify-content-center">
    <h3 class="text-center m-3">Versões</h3>
      <div class="d-flex">
        <%= link_to new_versao_path(musica_id: @musica), class: "d-flex align-items-center" do %>
          <%= image_tag "plus.png", size: "35", class: "m-2" %>
        <% end %>
      </div>
    <div class="d-flex col-lg-8 col-11 rounded shadow p-1 m-1">
        
        
        <table class="table d-flex">
        <% versoes_da_musica(@musica).each do |versao| %>
          <tr>
            <td><%= image_tag 'version.png', size: '25', class: '' %></td>
            <td class="fw-bold">Nome da versão:</td>
            <td><%= versao.nome %></td>
          </tr>

          <tr>
            <td ><%= image_tag 'youtube.png', size: '25', class: '' %></td>
            <td class="fw-bold mb-2">Link do Youtube:</td>
            <td><a href="<%= versao.link_youtube %>"><%= versao.link_youtube %></a></td>
          </tr>
          <tr><td colspan="3" class="text-center text-secondary">-----------------------------------------------------------------</td>
          </tr>
        <% end %>
          
        </table>
      </div>
    </div>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "Editar musica", edit_musica_path(@musica), class: "btn btn-warning m-2"  %>
  <%= button_to "Deletar musica", @musica, method: :delete, class: "btn btn-danger m-2" %>
  <%= link_to "Voltar", musicas_path, class: "btn btn-secondary m-2" %>
</div>

