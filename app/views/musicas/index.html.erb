<p style="color: green"><%= notice %></p>

<h2 class="text-center m-4">Musicas</h2>

<div class="container justify-content-center shadow p-2">
  <div class="d-flex">
    <div>
    <%= link_to new_musica_path, class: "d-flex align-items-center" do %>
      <%= image_tag "plus.png", size: "50", class: "mb-4" %>
    <% end %>
    </div>
    <div>
      <form action="/musicas" method="get"> 
        <input id="nome" name="nome" type="text" size="20"/> 
        <button type="submit">Pesquisar</button>
      </form>
    </div>
  </div>
  <div class="">
    <table class="table table-striped">
      <thead class="bg-dark text-light">
      <tr>
        <th class="bg-dark text-light">Nome:</th>
        <th class="bg-dark text-light">Interprete:</th>
      </tr>
      </thead>

      <div id="musicas">
        <% @musicas.each do |musica| %>
          <%= render musica %>
          
        <% end %>
      </div>

    </table>
  </div>
</div>
